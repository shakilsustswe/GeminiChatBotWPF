<Window x:Class="GeminiChatBotWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gemini Chatbot" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="ChatBox" Grid.Row="0" Margin="0 0 0 10" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox x:Name="InputBox" Width="600" Margin="0 0 10 0" />
            <Button Content="Send" Width="100" Click="SendButton_Click" />
        </StackPanel>
    </Grid>
</Window>